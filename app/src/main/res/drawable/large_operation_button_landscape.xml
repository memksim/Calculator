<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape

            android:shape="rectangle" >
            <padding
                android:left="0dp"
                android:top="16dp"
                android:right="0dp"
                android:bottom="16dp"
                />

            <solid
                android:color="#BFBFBF"
                />
            <stroke
                android:width="1dp"
                android:color="#878787"
                />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape

            android:shape="rectangle" >
            <padding
                android:left="0dp"
                android:top="16dp"
                android:right="0dp"
                android:bottom="16dp"
                />

            <solid
                android:color="#969696"
                />
            <stroke
                android:width="1dp"
                android:color="#878787"
                />
        </shape>
    </item>
</selector>