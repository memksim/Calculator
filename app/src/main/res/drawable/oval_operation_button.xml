<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#AFF7BE"/>
            <stroke android:color="@color/colorOvalOperationButtonClickTrue"
                android:width="5dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="#97F7A1"/>
            <stroke android:color="@color/colorOvalOperationButtonClickFalse"
                android:width="5dp"/>
        </shape>
    </item>
</selector>