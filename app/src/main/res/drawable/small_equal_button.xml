<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape

            android:shape="rectangle" >
            <padding
                android:left="0dp"
                android:top="8dp"
                android:right="0dp"
                android:bottom="8dp"
                />

            <solid
                android:color="#49B8C9"
                />
            <stroke
                android:width="1dp"
                android:color="#878787"
                />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape

            android:shape="rectangle" >
            <padding
                android:left="0dp"
                android:top="8dp"
                android:right="0dp"
                android:bottom="8dp"
                />

            <solid
                android:color="#328DBA"
                />
            <stroke
                android:width="1dp"
                android:color="#878787"
                />
        </shape>
    </item>
</selector>