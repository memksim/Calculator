<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#EDEDED"
    >

    <TextView
        android:id="@+id/action_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="0"
        android:textSize="60sp"
        android:textColor="#108720"
        android:layout_marginRight="55dp"
        app:layout_constraintBottom_toTopOf="@id/LinearLayout_C_pm_pers_div" />

    <LinearLayout
        android:id="@+id/LinearLayout_C_pm_pers_div"
        style="@style/ButtonsLayoutStyle"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/LinearLayout_7_8_9_miltiplication"
        tools:layout_editor_absoluteX="-127dp">

        <Button
            android:id="@+id/button_C"
            android:background="@drawable/oval_operation_button"
            style="@style/ButtonStyle"
            android:textColor="#EDEDED"
            android:text="C" />

        <Button
            android:id="@+id/button_pm"
            android:background="@drawable/oval_operation_button"
            style="@style/ButtonStyle"
            android:textColor="#EDEDED"
            android:text="+/-" />

        <Button
            android:id="@+id/button_cls"
            android:background="@drawable/oval_operation_button"
            style="@style/ButtonStyle"
            android:textColor="#EDEDED"
            android:text="CA" />

        <Button
            android:id="@+id/button_div"
            android:background="@drawable/oval_operation_button"
            style="@style/ButtonStyle"
            android:textColor="#EDEDED"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_7_8_9_miltiplication"
        style="@style/ButtonsLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayout_4_5_6_minus">

        <Button
            android:id="@+id/button_7"
            style="@style/ButtonStyle"
            android:background="@drawable/oval_number_button"
            android:text="7" />

        <Button
            android:id="@+id/button_8"
            style="@style/ButtonStyle"
            android:background="@drawable/oval_number_button"
            android:text="8" />

        <Button
            android:id="@+id/button_9"
            style="@style/ButtonStyle"
            android:background="@drawable/oval_number_button"
            android:text="9" />

        <Button
            android:id="@+id/button_multiplication"
            style="@style/ButtonStyle"
            android:background="@drawable/oval_operation_button"
            android:textColor="#EDEDED"
            android:text="*" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_4_5_6_minus"
        style="@style/ButtonsLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@id/LinearLayout_1_2_3_plus"
        >

        <Button
            android:id="@+id/button_4"
            android:background="@drawable/oval_number_button"
            style="@style/ButtonStyle"
            android:text="4"/>
        <Button
            android:id="@+id/button_5"
            android:background="@drawable/oval_number_button"
            style="@style/ButtonStyle"
            android:text="5"/>
        <Button
            android:id="@+id/button_6"
            android:background="@drawable/oval_number_button"
            style="@style/ButtonStyle"
            android:text="6"/>
        <Button
            android:id="@+id/button_minus"
            android:background="@drawable/oval_operation_button"
            style="@style/ButtonStyle"
            android:textColor="#EDEDED"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_1_2_3_plus"
        style="@style/ButtonsLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@id/LinearLayout_0_com_equal">

        <Button
            android:id="@+id/button_1"
            android:background="@drawable/oval_number_button"
            style="@style/ButtonStyle"
            android:text="1"/>
        <Button
            android:id="@+id/button_2"
            android:background="@drawable/oval_number_button"
            style="@style/ButtonStyle"
            android:text="2"
            />
        <Button
            android:id="@+id/button_3"
            android:background="@drawable/oval_number_button"
            style="@style/ButtonStyle"
            android:text="3"/>
        <Button
            android:id="@+id/button_plus"
            android:background="@drawable/oval_operation_button"
            style="@style/ButtonStyle"
            android:textColor="#EDEDED"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_0_com_equal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        style="@style/ButtonsLayoutStyle"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button_0"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/oval_zero_button"
            android:textSize="30sp"
            android:textColor="#EDEDED"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="0"/>
        <Button
            android:id="@+id/button_com"
            android:background="@drawable/oval_operation_button"
            style="@style/ButtonStyle"
            android:textColor="#EDEDED"
            android:text=","/>
        <Button
            android:id="@+id/button_equal"
            android:background="@drawable/oval_operation_button"
            style="@style/ButtonStyle"
            android:textColor="#EDEDED"
            android:text="="/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>