<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/action_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:text="0"
        android:textColor="#000000"
        android:textSize="50sp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toTopOf="@id/LinearLayout_level_6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/LinearLayout_level_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/LinearLayout_level_5">

        <Button
            android:id="@+id/button_fact"
            android:text="x!"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_percent"
            android:text="%"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_clear_all"
            android:text="ca"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_clear_x"
            android:text="c"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_clear_last"
            android:text="@string/clear_last_symbol"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_level_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/LinearLayout_level_4">

        <Button
            android:id="@+id/button_x_in_y"
            android:text="@string/x_in_y"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_coup"
            android:text="1/x"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_square"
            android:text="@string/square"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_root"
            android:text="@string/sqrt"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_div"
            android:text="/"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_level_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/LinearLayout_level_3">

        <Button
            android:id="@+id/button_sin"
            android:text="sin(x)"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_7"
            android:text="7"
            android:background="@drawable/num_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_8"
            android:text="8"
            android:background="@drawable/num_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_9"
            android:text="9"
            android:background="@drawable/num_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_multiplication"
            android:text="*"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_level_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/LinearLayout_level_2">

        <Button
            android:id="@+id/button_cos"
            android:text="cos(x)"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_4"
            android:text="4"
            android:background="@drawable/num_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_5"
            android:text="5"
            android:background="@drawable/num_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_6"
            android:text="6"
            android:background="@drawable/num_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_minus"
            android:text="-"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_level_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/LinearLayout_level_1">

        <Button
            android:id="@+id/button_tan"
            android:text="tan(x)"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_1"
            android:text="1"
            android:background="@drawable/num_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_2"
            android:text="2"
            android:background="@drawable/num_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_3"
            android:text="3"
            android:background="@drawable/num_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_plus"
            android:text="+"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_level_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button_cot"
            android:text="cot(x)"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_pm"
            android:text="+/-"
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_0"
            android:text="0"
            android:background="@drawable/num_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_com"
            android:text=","
            android:background="@drawable/operation_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button_equal"
            android:text="="
            android:background="@drawable/equal_button_landscape"
            style="@style/LandSpace_Button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>